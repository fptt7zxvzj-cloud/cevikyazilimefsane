platform :ios, '16.0'   # gerekirse 17.0 yap
inhibit_all_warnings!

target 'YeniKulupYonetim' do
  use_frameworks! :linkage => :static  # İsteğe bağlı; Firebase statik linklemeyle iyi çalışır

  # Sadece ihtiyaç duydukların:
  pod 'FirebaseAuth'
  pod 'FirebaseStorage'
  pod 'FirebaseFirestore'
end
